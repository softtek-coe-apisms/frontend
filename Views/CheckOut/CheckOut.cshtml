@model CheckoutModel
@using EcommerseClient.Services
<script>
    $("#currencySelec").hide();
    $('#escondele').hide();
</script>

<div id="contenedor" class="container bg-light py-3 px-lg-5">
    <div class="row mt-5 py-2">
        <div class="col">
            <h3>
                Your order is complete!
            </h3>
            <p>
                Order Confirmation ID: <strong>@Model.OderId</strong>
                <br>
                Shipping Tracking ID: <strong>@Model.ShippingTrackingId</strong>
            </p>
            <p>
                <br>
                Total Paid: <strong>@ViewBag.currency @string.Format("{0:C}", Model.TotalToPay)</strong>
            </p>
            <a class="btn btn-primary" href="#" onclick="GoHome()" role="button">Browse other products &rarr; </a>
        </div>
    </div>
    <hr />

    @{
        CartService.DeleteCart(Context.Request.Cookies["UserId"]);
    }
</div>


